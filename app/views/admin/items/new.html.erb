<%= form_with model: @item ,url: admin_items_path do |f| %>
  <p>
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
  </p>
  <p>
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_field :introduction %>
  </p>
  <p>
  <%= f.label :introduction, "税抜価格" %>
  <%= f.text_field :price %>
  </p>
  
  <p>
  <%= f.submit "新規登録" %>
  </p>
<% end %>