<h1>会員情報編集</h1>

<%= form_with model: @customer, url:customers_information_path do |f| %>

<p>
  <%= f.label :name,"氏名" %>
  <%= f.text_field :last_name %> <%= f.text_field :first_name %>
</p>


<p>
  <%= f.label :name,"フリガナ" %>
  <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
</p>

<p>
  <%= f.label :post_code,"郵便番号" %>
  <%= f.text_field :post_code %> 
</p>

<p>
  <%= f.label :address,"住所" %>
  <%= f.text_field :address %> 
</p>

<p>
  <%= f.label :phone_number,"電話番号" %>
  <%= f.text_field :phone_number %> 
</p>

<p>
  <%= f.label :email,"メールアドレス" %>
  <%= f.text_field :email %> 
</p>


<%= f.submit "編集内容を保存" %>

<%= link_to "退会する", customers_unsubscribe_path %>




<% end %>
