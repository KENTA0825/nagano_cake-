<h2>新規会員登録</h2>

<%= form_with model: @customers ,url: admin_customers_path do |f| %>
  <p>
  <%= f.label :name,"名前" %>
  <%= f.text_field "(姓)":last_name,"(名)":first_name %>
  </p>
  
  <p>
  <%= f.label :name, "フリガナ" %>
  <%= f.text_field "(セイ)":last_name_kana,"(メイ)":first_name_kana %>
  </p>
  
  <p>
  <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %>
  </p>
  
  <p>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  </p>
  
   <p>
  <%= f.label :telephone_number, "電話番号(ハイフンなし）" %>
  <%= f.text_field :telephone_number %>
  </p>
  
  <p>
  <%= f.label :encrypted_password, "パスワード(６文字以上）" %>
  <%= f.text_field :encrypted_password %>
  </p>
  
  
  <p>
  <%= f.label :encrypted_password, "パスワード(確認用）" %>
  <%= f.text_field :encrypted_password %>
  </p>
  
  <p>
  <%= f.submit "新規登録" %>
  </p>
  
  <h2>既に登録済みの方</h2>
  
  <p>
  <%= f.submit "こちらからログインしてください。" %>
  </p>
  
<% end %>