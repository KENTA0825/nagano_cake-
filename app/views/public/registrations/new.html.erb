<h5>新規会員登録</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <p>
  <%= f.label :name,"名前" %>
  (姓)<%= f.text_field :last_name %> (名)<%= f.text_field :first_name %>
  </p>
  
  <p>
  <%= f.label :name,"フリガナ" %>
  (セイ)<%= f.text_field :last_name_kana %> (メイ)<%= f.text_field :first_name_kana %>
  </p>
  
  <p>
  <%= f.label :email,"メールアドレス" %>
  <%= f.text_field :email %> 
  </p>
  
  <p>
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :post_code %> 
  </p>
  
  <p>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %> 
  </p>
  
  <p>
  <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
  <%= f.text_field :phone_number %> 
  </p>
  
  <p>
  <%= f.label :password, "パスワード(６文字以上)" %>
  <%= f.password_field :password %> 
  </p>
  
  <p>
  <%= f.label :password_confirmation, "パスワード(確認用)" %>
  <%= f.password_field :password_confirmation %> 
  </p>


  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h5>既に登録済みの方</h5>

<%= render "public/shared/links" %>からログインしてください。
